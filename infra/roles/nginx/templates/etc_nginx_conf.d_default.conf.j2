# /etc/nginx/conf.d/default.conf
upstream myapp_servers {
    server localhost:8080;
}

server {
    listen       80;
    server_name  localhost;

    # Root directory (for static sites)
    root   /usr/share/nginx/html;
    index  index.html index.htm;

    # Basic security headers
    add_header X-Frame-Options "SAMEORIGIN";
    add_header X-Content-Type-Options "nosniff";
    add_header X-XSS-Protection "1; mode=block";

    # Access & Error Logs
    access_log  /var/log/nginx/access.log;
    error_log   /var/log/nginx/error.log;

    # Default location
    location / {
        try_files $uri $uri/ =404;
    }

    # Static Files
    location /static/ {
        expires 30d;
        access_log off;
    }

    # Rewrites
    location /redirect-me {
        return 301 /static/index.html;
    }

    # Proxy Pass
    location /api {
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_pass http://myapp_servers;
    }

    # Error Handling
    error_page 404 /custom_404.html;
    location = /custom_404.html {
        root /usr/share/nginx/html;
        internal;
    }
}

server {
    listen 443 ssl;
    server_name localhost;  # change this to your domain

    ssl_certificate     /etc/ssl/certs/localhost.crt;
    ssl_certificate_key /etc/ssl/private/localhost.key;

    # Minimal SSL settings
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers HIGH:!aNULL:!MD5;

    # Redirect everything to HTTP
    return 301 http://$host$request_uri;
}
